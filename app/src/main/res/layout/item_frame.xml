<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Simple.Frame"
    tools:ignore="UnusedAttribute, RtlHardcoded, ContentDescription">

    <ImageView
        style="@style/Simple.Avatar"
        android:id="@+id/avatar"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        style="@style/Simple.Username"
        android:id="@+id/username"
        android:layout_toRightOf="@id/avatar"
        android:layout_alignTop="@id/avatar"
        tools:text="drakeet"/>

    <FrameLayout
        style="@style/Simple.SubView"
        android:id="@+id/container"
        android:layout_below="@id/username"
        android:layout_alignLeft="@id/username"
        tools:layout_height="72dp"
        tools:background="@android:color/darker_gray"/>

    <TextView
        style="@style/Simple.CreateTime"
        android:id="@+id/create_time"
        android:layout_below="@id/container"
        android:layout_alignLeft="@id/username"
        tools:text="Just now"/>

    <TextView
        style="@style/Simple.Username"
        android:id="@+id/close"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:text="@string/close"/>

</RelativeLayout>
