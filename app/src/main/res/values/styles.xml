<resources xmlns:tools="http://schemas.android.com/tools">


<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Simple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Simple.Frame">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="elevation">2dp</item>
        <item name="android:elevation"
            tools:targetApi="lollipop">2dp
        </item>
    </style>

    <style name="Simple.Avatar">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Simple.Username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_text_primary</item>
    </style>

    <style name="Simple.SubView">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Simple.CreateTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/material_text_primary</item>
    </style>
    
    <style name="SimpleContent"/>
    <style name="SimpleContent.SimpleImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="SimpleContent.SimpleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">140</item>
        <item name="android:textColor">@color/material_text_primary</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
